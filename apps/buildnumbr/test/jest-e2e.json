{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "roots": [
    "<rootDir>/apps/",
    "<rootDir>/libs/"
  ],
  "moduleNameMapper": {
    "^@utils/utils(|/.*)$": "<rootDir>/libs/utils/src/$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
